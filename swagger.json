      requestBody:
        description: info that u want to edit
        content:
          JSON:
            schema:
              $ref: '#/components/schemas/GradeStudent'
      responses:
        '200':
          description: success
components:
  schemas:
    Lecturer:
      type: object
      properties:
        id:
          type: integer
          format: int32
        lecturerId:
          type: integer
          format: int32
        lecturerName:
          type: string
        lecturerLastName':
          type: string
        position:
          type: string
        workYear:
          type: integer
          format: int32
        faculty:
          type: string
        salary:
          type: integer
          format: int32
    LecturerEdit:
      type: object
      properties:
        lecturerName:
          type: string
        lecturerLastName':
          type: string
        position:
          type: string
          
    evaluateInfo:
      type: object
      properties:
        studentId:
          type: integer
          format: int32
        evaluationInfo:
          type: array
          items:
            type: object
            properties:
              questionId:
                type: integer
                format: int32
              questionName:
                type: string
              answerPoint:
                type: integer
                format: int32
                
        comment:
          type: string
    formInfo:
      type: object
      properties:
        formId:
          type: integer
          format: int32
        userId:
          type: integer
          format: int32
        formCategogy:
          type: integer
          format: int32
        description:
          type: string
        contentUrl:
          type: string

    receptInfo:
      type: object
      properties:
        receiptNumber:
          type: integer
          format: int32
        status:
          type: string
        date:
          type: string
        time:
          type: string
          
    tranferHistoryInfo:
      type: array
      items:
        type: object
        properties:
          semester:
            type: integer
            format: int32
          academicYear:
            type: integer
            format: int32
          description:
            type: string
          amount:
            type: integer
            format: int32
          overdue:
            type: integer
            format: int32
          loan:
            type: integer
            format: int32
          receptInfo:
            $ref: '#/components/schemas/receptInfo'
            
    student:
      type: object
      properties:
        studentId:
          type: integer
          format: int32
        firstName: 
          type: string
        lastName: 
          type: string
        faculty: 
          type: string
        department:
          type: string
        year: 
          type: integer
          format: int32
        email:
          type: string
    courseInfo:
      type: object
      properties:
        id:
          type: integer
          format: int32
        courseId:
          type: integer
          format: int32
        courseName:
          type: string
        position:
          type: string
    GradeStudent:
      type: object
      properties:
        studentId:
          type: integer
          format: int32
        courseId:
          type: integer
          format: int32
        courseName:
          type: string
        grade:
          type: string